---
import { getCollection } from 'astro:content';
const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate))
  .slice(0, 2);
---

<section class="nova-preview">
  <div class="nova-intro-row">
    <img src="/Nova.png" alt="Nova" class="nova-intro-img" />
    <div class="nova-speech-bubble">
        What do you want to explore today?
    </div>
  </div>

  <div class="nova-posts-row">  
    {recentPosts.map((post) => (
      <div class="nova-post-card">
        <a href={`/blog/${post.id}/`}>
          <img src={post.data.image} alt={post.data.title} class="nova-post-img" />
          <h3 class="nova-post-title">{post.data.title}</h3>
        </a>
          <div class="nova-date-row">
            <p class="nova-post-date">{post.data.pubDate.toLocaleDateString()}</p>
            <div class="nova-info-wrapper">
              <div class="nova-info-button ripple-active">
                <img src="/Nova.png" alt="More info" class="nova-info-icon" />
                <div class="nova-info-box">
                {post.data.description}
              </div>
            </div>
          </div>
        </div>  
      </div>
    ))}
  </div>
</section>

<script>
  document.querySelectorAll('.nova-info-button').forEach(button => {
    button.addEventListener('mouseenter', () => {
      button.classList.remove('ripple-active');
    }, { once: true });
  });
</script>

<style>
    html, body {
      background: var(--bg);
      color: var(--text);
    }

    .nova-preview {
      background: var(--section-bg);
      padding: 2em;
      border-radius: 12px;
      box-shadow: var(--shadow);
      border: 1px solid var(--accent);
      margin-bottom: 3em;
      color: var(--text);
    }

    .nova-date-row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-top: 0.5em;
    }

    .nova-post-date {
      margin: 0;
      font-size: 0.9rem;
      color: var(--date-color);
    }

    .nova-info-wrapper {
      margin-top: 0; /* remove vertical spacing */
    }

    .nova-posts-row {
        display: flex;
        flex-wrap: wrap;
        gap: 2em;
        justify-content: space-between;
    }

    .nova-post-card {
        flex: 1;
        max-width: 48%;
        background: var(--card-bg);
        border: 1px solid var(--accent);
        border-left: 4px solid var(--card-accent);
        border-radius: 8px;
        padding: 1em;
        position: relative;
        box-shadow: var(--shadow);
        color: var(--text);
    }

    .nova-intro-img {
        width:100px;
        height: auto;
        flex-shrink: 0;
    }

    .nova-info-icon {
        width: 27px;
        height: auto;
        cursor: pointer;
        z-index: 10;
    }
    .nova-info-icon:hover {
      transform: scale(1.1);
    }

    .nova-info-wrapper {
      position: relative;
      margin-top: 1em;
    }

    .nova-info-box {
      display: none;
      position: absolute;
      top: 0px;
      right: 40px;
      left: auto;
      background: var(--bg-2);
      color: var(--info-text);
      padding: 0.6em 1em;
      border-radius: 8px;
      box-shadow: 0 0 10px var(--accent);
      max-width: 400px;
      width: 350px;
      white-space: normal;
      z-index: 10;
      font-size: 0.9rem;
      line-height: 1.4;
      border: 1px solid var(--border);
    }
    .nova-info-box.visible {
      display: block;
    }

    .nova-info-button {
      position: relative;
      display: inline-block;
    }
    .nova-info-button:hover .nova-info-box {
      display: block;
    }

    .ripple-active::before,
    .ripple-active::after {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      width: 24px;
      height: 24px;
      border: 2px solid var(--ripple-color);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      z-index: 1;
      opacity: 0;
      animation: novaRipple 2s infinite ease-out;
    }
    .ripple-active::after {
      animation-delay: 1s;
    }

    .nova-speech-bubble {
        position: relative;
        background: var(--card-bg);
        color: var(--nova-box-text);
        padding: 0.8em 1.2em;
        border-radius: 12px;
        font-family: monospace;
        box-shadow: var(--nova-box-shadow);
        max-width: 320px;  
        font-size: 1rem;
        line-height: 1.5;
        margin-top: 0.5em;
        border: 1px solid var(--section-border);
    }

    .nova-intro-row {
        display: flex;
        align-items: flex-start;
        gap: 1em;
        margin-bottom: 2em;
    }

    @keyframes novaRipple {
      0% {
        transform: translate(-50%, -50%) scale(1);
        opacity: 0.8;
      }
      100% {
        transform: translate(-50%, -50%) scale(2.5);
        opacity: 0;
      }
    }

    @media (max-width: 700px) {
        .nova-posts-row {
            flex-wrap: wrap;
            flex-direction: column;
        }

        .nova-post-card {
             max-width: 100%;
        }
    }
    .nova-post-title {
      font-size: 1.3rem; 
      line-height: 1.3;
      margin: 0.5em 0;
      text-align: center;  
      color: var(--title-color);
    }
    .nova-post-card a {
      text-decoration: none;   /* removes underline from all text inside the link */
    }

    .nova-post-title {
      text-decoration: none;   /* extra safety */
    }
</style>