---
const today = new Date();
---

<footer>
	&copy; {today.getFullYear()} Arya Pandit.
	<p class="footer-note"><em>All rights reserved across this galaxy and all the next.</em></p>
	<div class="social-links">
		<div class="form-wrapper">
			<form
				action="https://buttondown.com/api/emails/embed-subscribe/TheGalacticGateway"
				method="post"
				target="popupwindow"
				onsubmit="window.open('https://buttondown.com/TheGalacticGateway', 'popupwindow')"
				class="embeddable-buttondown-form"
			>
				<input type="email" name="email" id="bd-email" placeholder="Enter email to join newsletter" autocomplete="email" required>
				<input type="submit" value="Join" />
			</form>
		</div>
		<div class="icon-wrapper">
			<a href="https://github.com/AryaIpandit/Astronomy-Blog" target="_blank">
				<span class="sr-only">Go to The Galactic Gateways's GitHub repo</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="32" height="32" astro-icon="social/github"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="https://mail.google.com/mail/?view=cm&fs=1&to=galacticgateway@duck.com">
				<svg viewBox="0 0 24 24" aria-hidden="true" width="32" height="32">
					<path
						fill="currentColor"
						d="M20 4H4c-1.1 0-2 .9-2 2v12c0 
							1.1.9 2 2 2h16c1.1 0 2-.9 
							2-2V6c0-1.1-.9-2-2-2zm0 
							4.99-8 5-8-5V6l8 
							5 8-5v2.99z"
						/>
					</svg>
			</a>
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em 6em 1em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
	}
	.social-links {
		display: flex;
		flex-direction: column;
  		align-items: center;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
	}
	.social-links a:hover {
		color: rgb(var(--gray-dark));
	}
	input[type="email"]::placeholder {
		text-align: center;
		color: #888;
  		font-style: italic;
	}
	input[type="email"] {
		width: 100%;
		max-width: 320px;
		padding: 0.75em 1em;
		border: 1px solid var(--accent, #8a2be2);
		border-radius: 999px;
		background-color: var(--bg);
		color: #eee;
		font-size: 1rem;
		text-align: center;
		outline: none;
		transition: border-color 0.3s ease, box-shadow 0.3s ease;
	}
	input[type="submit"] {
		margin-top: 0.75em;
		padding: 0.75em 1.5em;
		border: none;
		border-radius: 999px;
		background: var(--button-gradient);
		color: #fff;
		font-weight: bold;
		font-size: 1rem;
		cursor: pointer;
		box-shadow: 0 0 10px rgba(138, 43, 226, 0.5);
		transition: transform 0.2s ease, box-shadow 0.3s ease;
	}
	input[type="submit"]:hover {
		transform: scale(1.05);
		box-shadow: var(--hover-shadow);
	}
	.embeddable-buttondown-form {
		z-index: 1;
		margin-bottom: 0.5em;
	}
	.form-wrapper {
		width: 100%;
		display: flex;
		justify-content: center;
	}
	.icon-wrapper {
		display: flex;
		justify-content: center;
		gap: 2em;
	}
	input[type="email"]:focus {
		box-shadow: var(--hover-shadow);
	}
</style>
