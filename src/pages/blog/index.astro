---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
  				max-width: 960px;
  				width: 100%;
  				margin: 0 auto;
  				padding: 0 1rem;
  				box-sizing: border-box;
			}
			#nova-loader {
    			position: fixed;
    			top: 0;
    			left: 0;
    			width: 100%;
    			height: 100%;
    			background: black;
    			display: flex;
    			align-items: center;
    			justify-content: center;
    			z-index: 9999;
  			}
  			.nova-core {
    			width: 40px;
    			height: 40px;
    			border-radius: 50%;
    			background: radial-gradient(circle at center, #8a2be2, #4b0082);
    			box-shadow: 0 0 20px #8a2be2, 0 0 40px #00ffff;
    			animation: pulse 1.5s infinite ease-in-out;
  			}
  			.nova-trail {
    			position: absolute;
 				width: 80px;
    			height: 80px;
    			border: 2px dashed rgba(138, 43, 226, 0.5);
    			border-radius: 50%;
    			animation: orbit 2s linear infinite;
  			}
  			@keyframes pulse {
    			0%, 100% { transform: scale(1); opacity: 1; }
    			50% { transform: scale(1.3); opacity: 0.7; }
  			}
  			@keyframes orbit {
    			0% { transform: rotate(0deg); }
    			100% { transform: rotate(360deg); }
  			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child .nova-post-img {
  				width: 100%;
  				max-width: 500px;
  				height: auto;
  				display: block;
  				margin: 0 auto;
			}
			.nova-info-icon {
  				width: 27px;
  				height: auto;
  				cursor: pointer;
  				z-index: 10;
  				display: block;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
				.first-post .nova-icon-wrapper,
  				.first-post .nova-post-date {
    				margin: 0;
    				text-align: center;
  				}
				@media (max-width: 700px) {
  					.nova-info-box {
    					max-width: 50vw; 
    					left: 0;
    					right: 0;
    					margin: 0 auto;
  					}
}
			}
			.first-post a {
  				pointer-events: auto;
			}
			
			.first-post .nova-icon-wrapper {
  				pointer-events: auto;
  				z-index: 20;
  				position: relative;
			}
			.first-post .nova-post-content {
  				position: relative;
  				z-index: 1;
			}
			.nova-post-card {
  				position: relative;
  				background: var(--card-bg);
  				border: 1px solid var(--border);
  				border-left: 4px solid var(--card-accent);
  				border-radius: 8px;
  				padding: 1em;
  				box-shadow: var(--shadow);
			}

			.nova-info-wrapper {
  				position: relative;
  				margin-top: 1em;
			}

			.nova-info-button {
  				position: relative;
  				display: inline-block;
			}

			.nova-info-icon {
  				width: 27px;
  				height: auto;
  				cursor: pointer;
  				z-index: 10;
			}

			nova-info-icon:hover {
  				transform: scale(1.1);
			}

			.nova-info-box {
  				display: none;
  				position: absolute;
  				top: 50%;
				right: 100%;
  				background: #1a1a40;
  				color: #00ffff;
  				padding: 0.6em 1em;
  				border-radius: 8px;
  				box-shadow: 0 0 10px #4b0082;
  				max-width: 400px;
  				width: 350px;
  				white-space: normal;
				word-wrap: break-word;
  				z-index: 21;
  				font-size: 0.9rem;
  				line-height: 1.4;
				transform: translateY(-50%);
				margin-right: 0.5em; 
			}

			.nova-info-button:hover .nova-info-box {
  				display: block;
			}

			.nova-icon-wrapper:hover .nova-info-box {
  				display: block;
			}

			@keyframes novaRipple {
  				0% {
    				transform: translate(-50%, -50%) scale(1);
    				opacity: 0.8;
  				}
  				100% {
    				transform: translate(-50%, -50%) scale(2.5);
    				opacity: 0;
  				}
			}
			.nova-date-row {
  				display: flex;
  				align-items: center;
  				justify-content: space-between;
  				margin-top: 0.5em;
			}
			.first-post .nova-info-icon {
  				width: 36px;
			}
			.first-post .nova-icon-wrapper {
  				margin-right: clamp(2rem, 10vw, 12rem);
				display: inline-block;
  				position: relative;
			}
			.first-post .nova-post-date {
  				margin-left: clamp(2rem, 10vw, 12rem);
			}
			.nova-icon-wrapper {
  				position: relative;
  				display: inline-block;
			}
			.nova-icon-wrapper.ripple-active::before,
			.nova-icon-wrapper.ripple-active::after {
  				content: "";
  				position: absolute;
  				top: 50%;
  				left: 50%;
  				width: 24px;
  				height: 24px;
  				border: 2px solid #00ffff;
  				border-radius: 50%;
  				transform: translate(-50%, -50%);
  				z-index: 1;
  				opacity: 0;
  				animation: novaRipple 2s infinite ease-out;
			}
			.nova-icon-wrapper.ripple-active::after {
  				animation-delay: 1s;
			}
			.nova-icon-wrapper.ripple-active:hover::before,
			.nova-icon-wrapper.ripple-active:hover::after {
  				display: none;
			}
			.nova-icon-wrapper.show-description .nova-info-box {
  				display: block;
			}
		</style>
	</head>
	  <script>
  		window.addEventListener("load", () => {
    		const loader = document.getElementById("nova-loader");
    		if (loader) {
      			loader.style.opacity = "0";
      			loader.style.transition = "opacity 0.5s ease";
      			setTimeout(() => loader.remove(), 500);
    		}
  		});
  	  </script>
	  <script>
  		document.querySelectorAll('.nova-icon-wrapper').forEach(wrapper => {
    		wrapper.addEventListener('mouseenter', () => {
      			wrapper.classList.remove('ripple-active');
    		}, { once: true });
  		});
	  </script>
	  <script>
  		document.querySelectorAll('.nova-icon-wrapper').forEach(wrapper => {
    		wrapper.addEventListener('click', (e) => {
      			e.stopPropagation(); // prevent bubbling
      			e.preventDefault();  // prevent accidental navigation
      			wrapper.classList.toggle('show-description');
    		});
  		});
</script>
	<body>
		<div id="nova-loader">
  			<div class="nova-core"></div>
  			<div class="nova-trail"></div>
		</div>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post, index) => (
							<li class={`nova-post-card ${index === 0 ? 'first-post' : ''}`}>
  								<a href={`/blog/${post.id}/`}>
    								{post.data.image && (
      									<img
        									src={post.data.image}
        									alt={post.data.title}
        									width="720"
        									height="360"
        									class="nova-post-img"
        									style="border-radius:12px; margin-bottom:0.5rem;"
      									/>
    								)}
    								<h4 class="title nova-post-title">{post.data.title}</h4>
								</a>
									<div class="nova-date-row">
    									<p class="date nova-post-date">
      										<FormattedDate date={post.data.pubDate} />
    									</p>

  								<div class="nova-info-button">
    								<div class="nova-info-wrapper">
										<div class="nova-icon-wrapper ripple-active">
      										<img src="/Nova.png" alt="More info" class="nova-info-icon" />
										</div>
      									<div class="nova-info-box">{post.data.description}</div>
    								</div>
  								</div>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
